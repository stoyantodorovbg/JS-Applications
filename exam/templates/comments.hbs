{{header}}
<section id="viewComments">
    <div class="post">
        <div class="col thumbnail">
            <a href="http://sammyjs.org/docs/api/0.7.4/all#Sammy.RenderContext-load">

            </a>
        </div>
        <div class="post-content">
            <div class="title">
                <a href="http://sammyjs.org/docs/api/0.7.4/all#Sammy.RenderContext-load">
                    Sammy Docs
                </a>
            </div>
            <div class="details">
                <p>Very helpful and complete info. Even includes a detailed tutorial.</p>
                <div class="info">
                    submitted 5 days ago by pesho
                </div>
                <div class="controls">
                    <ul>
                        <li class="action"><a class="editLink" href="#">edit</a></li>
                        <li class="action"><a class="deleteLink" href="#">delete</a></li>
                    </ul>
                </div>

            </div>
        </div>
        <div class="clear"></div>
    </div>
    <div class="post post-content">
        <form id="commentForm" action="#/submitComment" method="post">
            <label>Comment</label>
            <textarea id="commentContent" name="content" type="text"></textarea>
            <input type="submit" value="Add Comment" id="btnPostComment">
        </form>
    </div>
    {{#if hasNoComments}}
        <h2>There is no comments.</h2>
    {{/if}}
    {{#each comments}}
        {{> comment}}
    {{/each}}
</section>
{{footer}}
