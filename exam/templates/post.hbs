<article class="post">
    <div class="col rank">
        <span>{{count}}</span>
    </div>
    <div class="col thumbnail">
        <a href="{{url}}">
            <img src="{{imageUrl}}">
        </a>
    </div>
    <div class="post-content">
        <div class="title">
            <a href="{{url}}">
                {{title}}
            </a>
        </div>
        <div class="details">
            <div class="info">
                <p>Submitted {{created}} ago by {{author}}</p>
            </div>
            <div class="controls">
                <ul>
                    <li class="action"><a class="commentsLink" href="#/comments">comments</a></li>
                    {{#if createdByUser}}
                    <li class="action"><a class="editLink" href="#/edit">edit</a></li>
                    <li class="action"><a class="deleteLink" href="#/delete">delete</a></li>
                    {{/if}}
                </ul>
            </div>

        </div>
    </div>
</article>